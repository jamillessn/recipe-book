<h1>RecipeBook</h1>
<%= link_to 'Add a new recipe', new_recipe_path %>
        <% @recipes.each do |recipe|%>
        <section class='max-w-sm rounded overflow-hidden shadow-lg'>
            <div class="w-full ">
                <% if recipe.image_url.present? %>
                <%= image_tag recipe.image_url, class: "w-full" %>
                <% end %>
            </div>
            <div class='px-6 py-4'>
                <div class="font-bold text-xl mb-2"><%= recipe.name %></div>
                    <p class="text-gray-700 text-base">
                        <%= recipe.desc %>
                    </p>
                 <%= link_to "Edit Recipe", edit_recipe_path(recipe), class: 'bg-transparent hover:bg-blue-500 text-blue-700 font-semibold hover:text-white py-2 px-4 border border-blue-500 hover:border-transparent rounded mb-4' %>
            </div>
        </section>

  
        <% end %>



