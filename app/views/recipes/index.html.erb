


    <section class='my-12 max-w-screen-xl mx-auto px-6'>
        <div class='grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-10 mt-12'>
            <% @recipes.each do |recipe| %>
        
            <section class='bg-white border border-gray-100 transition transform duration-700 hover:shadow-xl hover:scale-105 p-4 rounded-lg relative'>
                <div class="flex flex-col items-center my-3 space-y-2">
                    <div class='px-6 py-4'>
                        <% if recipe.image_url.present? %>
                        <%= image_tag recipe.image_url, class: "w-full mb-4" %>
                    <% end %>
                        <div class="font-bold text-xl mb-2">
                            <%= link_to recipe.name, recipe_path(recipe), class:"font-medium text-blue-600 dark:text-red-500 hover:underline" %>
                        </div>
                        <p class="text-gray-700 text-base mb-2">
                            <%= recipe.desc %>
                        </p>
                    <%= button_to "Edit Recipe", edit_recipe_path(recipe),method: :get, class: 'bg-transparent hover:bg-red-500 text-red-700 font-semibold hover:text-white py-2 px-4 border border-red-500 hover:border-transparent rounded mb-4' %>
                    </div>
                </div>
            </section>
            
        <% end %>
        </div>
        
    </section>

